<% for(var i=0; i<posts.length; i++) {%>
  <div class="flex items-center justify-center">
    <div class="w-[365px] rounded-xl border bg-white p-5 shadow-md md:w-[600px]">
      <div class="flex w-full items-center justify-between border-b pb-3">
        <div class="flex items-center space-x-3">
          <div class="h-8 w-8 rounded-full bg-slate-400 bg-[url('https://i.pravatar.cc/32')]"></div>
          <div class="text-lg font-bold text-slate-700"><%= posts[i].user.userName.split("@")[0] %></div>
        </div>
        <div class="flex items-center space-x-8">
          <button class="btn-accent mx-2 rounded-2xl border px-5 py-1 text-xs font-semibold"><%= posts[i].liftCategory %></button>
          <div class="text-neutral-500 text-xs"><%= posts[i].createdAt.toLocaleDateString()%> @ <%= posts[i].createdAt.toLocaleTimeString() %></div>
        </div>
      </div>
      <div class="flex">
        <div class="flex flex-col-reverse items-center justify-center">
          <video controls="controls" name="Video Name" class="w-3/4 md:w-3/5">
            <source src="<%= posts[i].video%>" />
          </video>
          <div class="my-10 w-[300px] break-words text-lg font-bold">
            <h2 class="text-center"><%= posts[i].title %></h2>
          </div>
        </div>
      </div>
      <div>
        <div class="mt-5 flex items-center justify-between px-2 text-slate-500">
          <div class="flex space-x-4 md:space-x-8">
            <div class="flex cursor-pointer items-center transition hover:text-slate-600">
              <button class="btn btn-primary mt-2" href=""><a href="/post/<%= posts[i]._id%>">View post</a></button>
            </div>
            <!-- 
            <div class="flex cursor-pointer items-center transition hover:text-slate-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-1.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
              </svg>
            </div> -->
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</posts.length;>
