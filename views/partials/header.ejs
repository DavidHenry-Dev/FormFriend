<!DOCTYPE html>
<html lang="en" data-theme="black">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form-friend</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="/output.css" rel="stylesheet" />
  </head>

  <body class="bg-customMain">
    <!-- NAVBAR -->
    <div class="navbar h-24 bg-customButton shadow-lg">
      <div class="navbar-start">
        <a href="#"><img src="https://res.cloudinary.com/davidhenrydev/image/upload/c_scale,w_223/v1668369811/FormFriend/FFlogo_kdubf7.png" class="h-8 pl-2 md:h-12" alt="" /></a>
      </div>

      <div class="navbar-end">
        <% if( path != '/' && path != '/signup') { %>
        <!-- <span class="text-md px-2 font-bold"><%= user.userName %></span> -->
        <div class="flex h-10 w-10 items-center justify-evenly rounded-full bg-customSecondary text-customAccent">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
          </svg>
        </div>
        <!-- DROPDOWN MENU -->
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 stroke-customAccent" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
          </label>
          <ul tabindex="0" class="dropdown-content menu rounded-box menu-compact mt-3 w-52 bg-customSecondary p-2 text-customText shadow-md">
            <li>
              <a href="/profile" class="text-2xl">Profile / Post</a>
            </li>
            <li><a href="/feed" class="text-2xl">Feed</a></li>
            <li><a href="/logout" class="text-2xl">Logout</a></li>
          </ul>
        </div>
        <% } else { %>
        <span><a href="/" class="px-4 text-xl hover:opacity-80">Login</a></span>
        <span><a href="/signup" class="px-4 text-xl hover:opacity-80">Signup</a></span>
        <% } %>
      </div>
    </div>
  </body>
</html>
