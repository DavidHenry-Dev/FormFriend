<%- include('partials/header') -%>


<% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
<div class="alert alert-danger"><%= el.msg %></div>
<% }) %> <% } %> <% if (locals.messages.info) { %> <%
  messages.info.forEach( el => { %>
<div class="alert alert-info"><%= el.msg %></div>
<% }) %> <% } %>
<div class="hero min-h-screen bg-base-200 bg-[url(https://res.cloudinary.com/davidhenrydev/image/upload/v1664224866/FormFriend/Barbell1_eyvfdl.jpg)] bg-hero bg-no-repeat bg-cover bg-center bg-fixed bg-black/60">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold text-white">Welcome to Form-fit</h1>
      <p class="py-6 text-white text-2xl"></p>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <form action="/" method="POST">
          <div class="form-control">
            <label class="form-label">
              <span class="label-text">Email</span>
            </label>
            <input type="email" placeholder="email" name="email" id="exampleInputEmail1" class="input input-bordered form-control" />
          </div>
          <div class="form-control">
            <label class="form-label">
              <span class="label-text">Password</span>
            </label>
            <input type="password" placeholder="password" name="password" id="exampleInputPassword1" class="input input-bordered form-control" />
            <label class="label">
              <a href="/signup" class="label-text-alt link link-hover">New? Signup now!</a>
            </label>
          </div>
          <button class="btn btn-primary" type="submit">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>