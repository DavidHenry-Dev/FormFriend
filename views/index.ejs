<%- include('partials/header') -%> <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
<div class="alert-danger alert"><%= el.msg %></div>
<% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach( el => { %>
<div class="alert alert-info"><%= el.msg %></div>
<% }) %> <% } %>
<div class="bg-hero hero min-h-screen bg-base-200 bg-black/60 bg-[url(https://res.cloudinary.com/davidhenrydev/image/upload/v1664224866/FormFriend/Barbell1_eyvfdl.jpg)] bg-cover bg-fixed bg-center bg-no-repeat">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold text-white">Welcome to Form-Friend</h1>
      <p class="py-6 text-2xl text-white">Get feedback on your form by weight-lifters far and wide.</p>
    </div>
    <div class="card w-full max-w-sm flex-shrink-0 bg-base-100 shadow-2xl">
      <div class="card-body">
        <form action="/" method="POST">
          <div class="form-control">
            <label class="form-label">
              <span class="label-text">Email</span>
            </label>
            <input type="email" placeholder="email" name="email" id="exampleInputEmail1" class="form-control input input-bordered" />
          </div>
          <div class="form-control">
            <label class="form-label">
              <span class="label-text">Password</span>
            </label>
            <input type="password" placeholder="password" name="password" id="exampleInputPassword1" class="form-control input input-bordered" />
            <label class="label">
              <a href="/signup" class="link link-hover label-text-alt text-sm">New? Signup now!</a>
            </label>
          </div>
          <button class="btn btn-primary" type="submit">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
