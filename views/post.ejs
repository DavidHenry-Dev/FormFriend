<%- include('partials/header') -%>
<div class="h-screen">
  <div class="flex flex-col justify-evenly items-center h-full">
    <div class="h-full w-96 flex gap-20 justify-center">

      <iframe class="h-[600]" src="<%= post.video%>" frameborder="0"></iframe>
      <div class='h-full w-1/2'>
        <h2 class='text-2xl font-bold mb-5'><%= post.title %></h2>
        <p class='text-lg'><%= post.caption %></p>
      </div>
    </div>
    <%if(post.user == user.id){ %>
    <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
      <button class="btn btn-primary fa fa-trash" type="submit">Delete Post</button>
    </form>
    <%}%>
    <ul class="h-10 w-full flex flex-col gap-20 p-5 m-5">
      <% for(var i=0; i<comments.length; i++) {%>
    <li class="h-10">
      <form class="col-1" action="/comment/likeComment/<%=post._id%>/<%=comments[i]._id %>?_method=PUT" method="POST">
        <button class="btn btn-primary" type="submit"><i class="fa-solid fa-arrow-up"></i></button>
      </form>
      <form class="col-1" action="/comment/dislikeComment/<%=post._id%>/<%=comments[i]._id %>?_method=PUT" method="POST">
        <button class="btn btn-primary" type="submit"><i class="fa-solid fa-arrow-down"></i></button>
      </form>
      <h3 class="col-3">Likes: <%= comments[i].likes %></h3>
      <p><%= comments[i].comment %></p>
    </li>
    <% } %>
    </ul>
    <div class="mt-5">
      <h2>Add a comment</h2>

      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div>
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>

</div>


<%- include('partials/footer') -%>