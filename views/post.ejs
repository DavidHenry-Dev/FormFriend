<%- include('partials/header') -%>

<div class="flex flex-col justify-center items-center px-2 bg-zinc-800">
  <div class="bg-zinc-100 lg:w-1/2 shadow-inner">
  <div class="flex justify-between text-md lg:text-lg m-2 p-2">
    <h3>Posted by: <%= post.user.userName.split("@")[0] %></h3>
    <h3 class="text-gray-400"><%= post.createdAt.toLocaleTimeString() %></h3>
  </div>
    <h1 class="text-lg md:text-xl lg:text-2xl text-center my-5">
      <%= post.caption %>
    </h1>
  <div class="flex justify-center items-center w-full">
    <video controls="controls" name="Video Name" class="lg:w-1/3">
      <source src="<%= post.video%>">
    </video>
  </div>
  <div class="w-full shadow-lg px-4">
    <div class="space-y-4">
      <div class="bg-white">
        <div class="flex-1 border rounded-lg px-4 py-2 sm:px-6 sm:py-4 leading-relaxed"> 
          <div class="mt-5">
            <form action="/comment/createComment/<%=post._id%>" method="POST" class="flex flex-col items-center justify-evenly">
              <div class="mb-3 w-full lg:w-3/4">
                <textarea class="form-control text-xl text-left border-2 mb-2 p-2 w-full" rows="5" placeholder="Comment on <%= post.user.userName.split("@")[0] %>'s post..." name='comment' id="comment" type="text"></textarea>
              </div>
              <button type="submit" class="btn btn-primary mb-5">Submit</button>
            </form>
          </div> 
          <h4 class="my-5 uppercase tracking-wide text-gray-400 font-bold text-xs">Comments</h4>
         
          <% for(var i=0; i<comments.length; i++) {%>
          <div class="space-y-4">
            <div class="flex">
              <div class="flex-shrink-0 mr-3 justify-center">
                <img class="rounded-full w-8 h-8 sm:w-8 sm:h-8 mb-3" src="https://img.icons8.com/color/48/000000/test-account.png" alt="">
                <div class='flex flex-col justify-evenly text-center'>
                  <form class="" action="/comment/likeComment/<%=post._id %>/<%=comments[i]._id %>?_method=PUT" method="POST" class="flex justify-end">
                    <button class="" type="submit"><i class="fa-regular fa-thumbs-up fa-lg text-green-700"></i></button>
                  </form>
                  <h2><%= comments[i].likes %></h3>
                    <form class="" action="/comment/dislikeComment/<%= post._id %>/<%=comments[i]._id %>?_method=PUT" method="POST" class="flex justify-end">
                      <button class="" type="submit"><i class="fa-regular fa-thumbs-down fa-lg text-red-800"></i></button>
                    </form>
                </div>
              </div>
              <div class="flex-1 bg-gray-100 rounded-lg px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
                <strong><%=comments[i].user.userName.split("@")[0]%></strong> <span class="text-xs text-gray-400"><%= comments[i].createdAt.toLocaleTimeString() %></span> -->
                <p class="h-[80px] text-md sm:text-lg md:text-xl lg:text-2xl">
                  <%= comments[i].comment %>
                </p>
              </div>

            </div>
            <% } %>
          </div>
         

        </div>
      </div>
    </div>
  </div>
</div>
</div>

<%- include('partials/footer') -%>